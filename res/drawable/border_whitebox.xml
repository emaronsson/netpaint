<?xml version="1.0" encoding="utf-8"?>

<shape
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/whiteborderbox">
    
    <solid
        android:color="#FFFFFF" />
    <stroke
        android:width="1dp"
        android:color="#FFC0C0C0" />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <margin
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <corners
        android:radius="6dp" />
</shape>